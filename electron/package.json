{
  "name": "visual-git-electron",
  "version": "1.0.10",
  "description": "Visual Git - Desktop application for visualizing git internals",
  "homepage": "https://github.com/MarkJamesHoward/Visual-Git",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && npm run copy-assets",
    "build:main": "node scripts/build-main.mjs",
    "build:preload": "esbuild src/main/preload.ts --bundle --platform=node --external:electron --outfile=dist/main/preload.js",
    "build:renderer": "esbuild src/renderer/renderer.ts --bundle --platform=browser --outfile=dist/renderer/renderer.js",
    "copy-assets": "node -e \"const fs=require('fs');fs.cpSync('src/renderer/index.html','dist/renderer/index.html');fs.cpSync('src/renderer/index.css','dist/renderer/index.css');\"",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": {
    "name": "Mark Howard",
    "email": "visualgit@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "esbuild": "^0.24.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.7.0"
  },
  "build": {
    "appId": "com.visualgit.electron",
    "productName": "Visual Git",
    "artifactName": "visualgit-${os}-${arch}.${ext}",
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "identity": null
    },
    "linux": {
      "target": ["deb", "tar.gz"],
      "category": "Development",
      "desktop": "build/linux/visual-git.desktop"
    },
    "deb": {
      "depends": [
        "git",
        "libgtk-3-0 | libgtk-3-0t64",
        "libnss3",
        "libxss1",
        "libasound2 | libasound2t64",
        "libgbm1"
      ],
      "maintainer": "Mark Howard <visualgit@example.com>",
      "afterInstall": "build/linux/postinst"
    }
  }
}
